<div class='bg-white h-screen w-screen flex justify-center items-center'>
    <div class="px-6 py-3 rounded border w-64">
        <div class="flex flex-col items-center justify-center mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-12 h-12" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
            </svg>
            <h2 class="text-2xl font-bold">se connecter</h2>
        </div>
        {% if erreur  %}
            <div class="flex flex-col my-2">
                <div class="text-xs text-red-400 flex justify-between items-center">
                    <span>
                    <b>erreur: </b>
                   les informations ne sont pas bonne
                    </span>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                </div>
            </div>
        {% endif %}
        <form action="#" method="POST">
            <div class="flex flex-col my-2">
                <label class="text-xs text-gray-400">Email</label>
                <input class="border rounded px-3 py-1 mt-2" type="text" name="email" placeholder="email"/>
            </div>
            <div class="flex flex-col my-2">
                <label class="text-xs text-gray-400">mot de passe</label>
                <input class="border rounded px-3 py-1 mt-2" type="password" name="password"  placeholder="Votre mot de passe"/>
            </div>
            <div class="flex flex-col items-center justify-center my-3">
                <button class="my-3 py-1 w-full rounded bg-blue-900 text-blue-200 ">
                  <p class="text-white">  se connecter </p>
                </button>
                <a class="mt-4 sm:mr-4"href="http://localhost/Unlinkedout/login/create">
                    <div class="flex justify-center items-center px-4 py-2 rounded-lg bg-blue-900 hover:bg-blue-800 hover:scale-[1.02] duration-300 cursor-pointer text-white">
                        s'inscrire
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v6m3-3H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    </div>
                </a>
            </div>
        </form>
    </div>
</div>

